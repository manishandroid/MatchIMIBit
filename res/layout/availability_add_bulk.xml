<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/table_morning_column"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ColumnTitle"
                android:layout_span="3"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Morning01"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="M" />

            <TextView
                android:id="@+id/Morning02"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="S" />

            <TextView
                android:id="@+id/Morning03"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="T" />

            <TextView
                android:id="@+id/Morning04"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="W" />

            <TextView
                android:id="@+id/Morning05"
                android:layout_span="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="T" />

            <TextView
                android:id="@+id/Morning06"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="F"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Morning07"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="S" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/MorningTitle"
                android:layout_span="3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Morning"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/Morning01"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Morning02"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Morning03"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Morning04"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Morning05"
                android:layout_span="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Morning06"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/Morning07"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/AfternoonTitle"
                android:layout_span="3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Afternoon"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/Afternoon01"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Afternoon02"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Afternoon03"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Afternoon04"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Afternoon05"
                android:layout_span="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Afternoon06"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/Afternoon07"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/EveningTitle"
                android:layout_span="3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Evening"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/Evening01"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Evening02"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Evening03"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Evening04"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Evening05"
                android:layout_span="1"
                android:background="@android:color/transparent"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/Evening06"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/Evening07"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/bulkRepeatAvailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bulkRepeatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="1" 
            android:padding="12dp"
            android:text="@string/availability_repeat"/>

         <TextView
            android:id="@+id/repeatField"
            style="@android:style/Widget.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:text="0"/>
    
        <TextView
            android:id="@+id/bulkRepeatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="1" 
            android:padding="12dp"
            android:text="@string/availability_weeks"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/bulkAvailabilityLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bulkRepeatLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:padding="12dp"
            android:text="@string/location_preference" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_availability_wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/buttonSubmitBulkAvailability"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_accept_offer"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/submit_bulk_availability"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/buttonCancelBulkAvailability"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_reject_offer"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/cancel_bulk_availability"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>