<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="16dp"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/labelAvailabilityInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/availability_info"
            android:textColor="#ABABAA" />

        <RelativeLayout
            android:id="@+id/layoutDailyDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_dark"
            android:padding="2dp" >

            <TextView
                android:id="@+id/labelDailyDateStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:text="@string/start_date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDailyDateStart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/labelDailyDateStart"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:paddingBottom="6dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp" />

            <TextView
                android:id="@+id/labelDailyDateEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelDailyDateStart"
                android:background="@android:color/transparent"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingTop="6dp"
                android:text="@string/end_date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDailyDateEnd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDailyDateStart"
                android:layout_toRightOf="@id/labelDailyDateEnd"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:paddingBottom="6dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp" />
        
            <TextView
                android:id="@+id/labelDailyTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelDailyDateEnd"
                android:background="@android:color/transparent"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:text="@string/start_time"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDailyTimeStart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelDailyDateEnd"
                android:layout_toRightOf="@id/labelDailyTimeStart"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:paddingBottom="6dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"/>

            <TextView
                android:id="@+id/labelDailyTimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textDailyTimeStart"
                android:background="@android:color/transparent"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingTop="6dp"
                android:text="@string/end_time"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDailyTimeEnd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textDailyTimeStart"
                android:layout_toRightOf="@id/labelDailyTimeEnd"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:paddingBottom="6dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layoutDailyRepeat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_dark"
            android:padding="2dp" >

            <TextView
                android:id="@+id/labelRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:text="@string/repeat"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textRepeat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/labelRepeat"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:paddingBottom="12dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:text="@string/repeat" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_dark"
            android:paddingBottom="10dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp" >

            <TextView
                android:id="@+id/labelLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:text="@string/location_preference"
                android:textStyle="bold" />
           
            
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_round_dark"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/buttonEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_accept_offer"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/edit_availability"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/buttonDelete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/button_accept_offer"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/delete_availability"
                android:textColor="@android:color/white" />
            
            <TextView
                android:id="@+id/buttonFreeze"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/button_accept_offer"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/freeze_availability"
                android:textColor="@android:color/white" 
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>