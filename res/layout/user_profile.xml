<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
    <ProgressBar
        android:id="@+id/progress"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
 	
    <ScrollView
        android:id="@+id/scrollView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:scrollbars="none" >
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <ImageView
	                android:id="@+id/profile_avatar"
	                android:layout_width="120dp"
	                android:layout_height="200dp"
	                android:layout_alignParentLeft="true"
	                android:scaleType="fitCenter"
	                android:contentDescription="@string/none_string" />
	
	            <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentTop="true"
	                android:layout_marginLeft="22dp"
	                android:layout_toRightOf="@+id/profile_avatar"
	                android:orientation="vertical"
	                android:paddingTop="12dp" >
	
	                <TextView
	                    android:id="@+id/profile_username"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/none_string" />
	
	                <TextView
	                    android:id="@+id/profile_email"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/none_string" />
	
	                <TextView
	                    android:id="@+id/profile_nric"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/none_string" />
	
	                <RatingBar
	                    android:id="@+id/ratingBar"
	                    style="?android:attr/ratingBarStyleSmall"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:focusable="false"
	                    android:focusableInTouchMode="false"
	                    android:numStars="5"
	                    android:rating="2.0"
	                    android:stepSize="1.0" />
	                
	                <Button 
	                    android:id="@+id/editProfile"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:paddingLeft="8dp"
	                    android:paddingRight="8dp"
	                    android:paddingTop="2dp"
	                    android:paddingBottom="2dp"
	                    android:text="@string/edit_profile"/>
	            </LinearLayout>
	        </RelativeLayout>
	
	        <Button
	            android:id="@+id/profile_blocked_companies_button"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="20dp"
	            android:background="@color/lightcolor"
	            android:gravity="left|center_vertical"
	            android:paddingBottom="12dp"
	            android:paddingLeft="5dp"
	            android:paddingTop="12dp"
	            android:text="@string/profile_blocked_companies"
	            android:textColor="@color/blue_gray"
	            android:textStyle="bold" />
	
	        <TextView
	            android:id="@+id/feedback"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/midgray"
	            android:gravity="center"
	            android:paddingBottom="12dp"
	            android:paddingTop="12dp"
	            android:text="@string/profile_feedback"
	            android:textAppearance="@android:style/TextAppearance.Medium"
	            android:textColor="@color/heavygray" />
	
	        <LinearLayout
	            android:id="@+id/layFeedback"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" />
	    </LinearLayout>
	
	</ScrollView>
</LinearLayout>
