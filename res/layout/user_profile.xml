<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/profile_avatar"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="John Doe" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="john@doe.com" />

            <TextView
                android:id="@+id/profile_nric"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="G737468J" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:numStars="5"
                android:rating="2.0"
                android:stepSize="1.0" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/profile_blocked_companies_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/lightcolor"
        android:gravity="left|center_vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingTop="20dp"
        android:text="@string/profile_blocked_companies"
        android:textColor="@color/blue_gray" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/midgray"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/profile_feedback"
        android:textColor="@color/heavygray"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/feedback_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/lightcolor"
        android:dividerHeight="1px" >
    </ListView>

</LinearLayout>